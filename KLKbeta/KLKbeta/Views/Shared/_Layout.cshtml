<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header>
        @Html.ActionLink("Сотрудники", "ViewStaff", "Home", routeValues: null, htmlAttributes: new { })
        @Html.ActionLink("Добавить сотрудника", "ViewAddStaff", "Home", routeValues: null, htmlAttributes: new { })
        @Html.ActionLink("Расписание", "ViewTable", "Home", routeValues: null, htmlAttributes: new { })
    </header>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - мое приложение ASP.NET</p>
        </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
